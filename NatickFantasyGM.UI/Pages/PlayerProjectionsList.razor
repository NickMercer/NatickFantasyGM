@page "/player-projections"
@using NatickFantasyGM.Core.PlayerProjections.Interfaces
@using NatickFantasyGM.Core.PlayerProjections.PlayerAggregate
@inject IPlayerRepository playerRepo


<h1>Player Projections</h1>

<RadzenDataGrid Data = "@_players"TItem= "Player" AllowPaging= "true" PageSize= "20" >
    <Columns>
        <RadzenDataGridColumn TItem= "Player" Property= "FullName" Title= "Name" />
    </Columns>
</RadzenDataGrid>


@code
{
    private IEnumerable<Player> _players;

    protected override Task OnInitializedAsync()
    {
        _players = playerRepo.GetAll();
        return base.OnInitializedAsync();
    }
}